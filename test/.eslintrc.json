{
  "env": {
    "mocha": true
  },
  "rules": {
    "no-console": "off",
    "no-invalid-this": "off",
    "max-len": ["error", {
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreComments": true
    }]
  },
  "globals": {
    "MockInteractions": true,
    "chai": true,
    "sinon": true,
    "flush": true,
    "fixture": false,
    "WCT": false,
    "replace": true,
    "stub": true,
    "setTimeOut": true
  }
}
